    <application android:name=".Application"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme">
        
        <activity android:name=".Activities.GameModeActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".Activities.OptionsActivity" android:label="@string/app_name" />
        <activity android:name=".Activities.HostingActivity" android:label="@string/app_name" />
        <activity android:name=".Activities.GameListActivity" android:label="@string/app_name" />
        <activity android:name=".Activities.HareActivity" android:label="@string/app_name" />
        <activity android:name=".Activities.HoundsActivity" android:label="@string/app_name" />
        <activity android:name=".Activities.CheckpointActivity" android:label="@string/app_name" />
        
    </application>

</manifest>
