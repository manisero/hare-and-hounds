<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://www.gueei.com/android-binding/"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
	<Button android:id="@+id/connectButton"
		android:layout_width="200dp"
		android:layout_height="100dp"
		android:text="@string/connection_connect"
		binding:onClick="connect" />
	    
	<TextView android:id="@+id/message"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    binding:text="message" />
	
	<com.fARmework.modules.ScreenGestures.Presentation.GesturePicker
	    android:id="@+id/gesturePicker"
	    android:layout_width="250dp"
	    android:layout_height="250dp"
	    android:background="#FFFFFF"
	    binding:onGesture="sendGesture" />
    
</LinearLayout>
