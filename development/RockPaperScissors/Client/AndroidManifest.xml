<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      	  package="com.fARmework.RockPaperScissors.Client"
      	  android:versionCode="1"
      	  android:versionName="1.0">
      
    <uses-sdk android:minSdkVersion="10" />

    <uses-permission android:name="android.permission.INTERNET" />
    
    <application android:name=".Application"
        		 android:icon="@drawable/icon"
        		 android:label="@string/app_name">
        
        <activity android:name=".Activities.GameModeActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activities.OptionsActivity" android:label="@string/app_name" />
        <activity android:name=".Activities.HostingActivity" android:label="@string/app_name" />
        <activity android:name=".Activities.GameListActivity" android:label="@string/app_name" />
        <activity android:name=".Activities.GameActivity" android:label="@string/app_name" />
        
    </application>
    
</manifest>