<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://www.gueei.com/android-binding/"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    <Button android:id="@+id/connectButton"
		android:layout_width="200dp"
		android:layout_height="100dp"
		android:text="@string/connection_connect"
		binding:onClick="connect" />
    
    <TextView android:id="@+id/status"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    binding:text="status" />
    
	<Button android:id="@+id/createButton"
		android:layout_width="200dp"
		android:layout_height="100dp"
		android:text="@string/mode_create"
		binding:onClick="create" />
    
	<Button android:id="@+id/joinButton"
		android:layout_width="200dp"
		android:layout_height="100dp"
		android:text="@string/mode_join"
		binding:onClick="join" />
	
</LinearLayout>
