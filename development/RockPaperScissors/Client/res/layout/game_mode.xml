<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://www.gueei.com/android-binding/"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <EditText android:id="@+id/serverAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/serverAddress"
        binding:text="serverAddress"
        binding:enabled="NOT(isConnected)" >
    </EditText>
    
    <EditText android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/userName"
        binding:text="userName"
        binding:enabled="NOT(isConnected)" >
        <requestFocus />
    </EditText>
    
	<Button android:id="@+id/createButton"
		android:layout_width="200dp"
		android:layout_height="100dp"
		android:text="@string/mode_create"
		binding:onClick="create"
		binding:enabled="NOT(isWaiting)" />
    
	<Button android:id="@+id/joinButton"
		android:layout_width="200dp"
		android:layout_height="100dp"
		android:text="@string/mode_join"
		binding:onClick="join"
		binding:enabled="NOT(isWaiting)" />

	<LinearLayout android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal">
        
	    <TextView android:id="@+id/status"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    binding:text="status" />
	    
	    <ProgressBar android:id="@+id/connectionProgress"
		    style="?android:attr/progressBarStyleSmall"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    binding:visibility="isWaiting" />
	    
	</LinearLayout>
	
	<Button android:id="@+id/disconnectButton"
		android:layout_width="200dp"
		android:layout_height="100dp"
		android:text="@string/connection_disconnect"
		binding:onClick="disconnect"
		binding:visibility="isConnected" />
	
</LinearLayout>
